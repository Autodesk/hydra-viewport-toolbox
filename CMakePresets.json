{
  "version": 9,
  "cmakeMinimumRequired": {
    "major": 3,
    "minor": 26,
    "patch": 0
  },
  "configurePresets": [
    {
      "name": "base",
      "hidden": true,
      "generator": "Ninja",
      "binaryDir": "${sourceDir}/build/${presetName}",
      "cacheVariables": {
        "ENABLE_TESTS": "ON",
        "CMAKE_INSTALL_PREFIX": "${sourceDir}/install/${presetName}",
        "CMAKE_EXPORT_COMPILE_COMMANDS": "ON"
      }
    },
    {
      "name": "debug",
      "inherits": "base",
      "displayName": "Debug",
      "description": "Use this preset for a debug build",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug"
      }
    },
    {
      "name": "release",
      "inherits": "base",
      "displayName": "Release",
      "description": "Use this preset for a release build",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Release"
      }
    }
  ],
  "buildPresets": [
    {
      "name": "base",
      "hidden": true,
      "configurePreset": "base",
      "verbose": false
    },
    {
      "name": "debug",
      "inherits": "base",
      "configurePreset": "debug",
      "displayName": "Debug"
    },
    {
      "name": "release",
      "inherits": "base",
      "configurePreset": "release",
      "displayName": "Release"
    }
  ],
  "testPresets": [
    {
      "name": "base",
      "hidden": true,
      "configurePreset": "base",
      "output": {
        "outputOnFailure": true
      }
    },
    {
      "name": "debug",
      "inherits": "base",
      "displayName": "Run tests for Debug",
      "configurePreset": "debug"
    },
    {
      "name": "release",
      "inherits": "base",
      "displayName": "Run tests for Release",
      "configurePreset": "release"
    }
  ],
  "workflowPresets": [
    {
      "name": "debug",
      "displayName": "Debug",
      "description": "Debug build and test",
      "steps": [
        {
          "type": "configure",
          "name": "debug"
        },
        {
          "type": "build",
          "name": "debug"
        },
        {
          "type": "test",
          "name": "debug"
        }
      ]
    },
    {
      "name": "release",
      "displayName": "Release",
      "description": "Release build and test",
      "steps": [
        {
          "type": "configure",
          "name": "release"
        },
        {
          "type": "build",
          "name": "release"
        },
        {
          "type": "test",
          "name": "release"
        }
      ]
    }
  ]
}
