{
  "version": 3,
  "cmakeMinimumRequired": {
    "major": 3,
    "minor": 21,
    "patch": 0
  },
  "configurePresets": [
    {
      "name": "debug",
      "displayName": "Debug Build",
      "generator": "Ninja",
      "description": "Use this preset for a debug build",
      "binaryDir": "${sourceDir}/build/debug",
      "environment": {},  
      "cacheVariables": {
        "ENABLE_TESTS": "ON",
        "CMAKE_BUILD_TYPE": "Debug",
        "CMAKE_INSTALL_PREFIX": "${sourceDir}/install/debug",
        "CMAKE_EXPORT_COMPILE_COMMANDS": "ON",
        "CMAKE_OSX_ARCHITECTURES": "arm64"
      }
    },
    {
      "name": "debug_adsk", 
      "displayName": "Debug Build (ADSK)",
      "generator": "Ninja",
      "description": "Use this preset for a debug build with ADSK OpenUSD",
      "binaryDir": "${sourceDir}/build/debug_adsk",
      "environment": {},  
      "cacheVariables": {
        "ENABLE_ADSK_OPENUSD_PENDING": "ON",
        "ENABLE_TESTS": "ON",
        "CMAKE_BUILD_TYPE": "Debug",
        "CMAKE_INSTALL_PREFIX": "${sourceDir}/install/debug_adsk",
        "CMAKE_EXPORT_COMPILE_COMMANDS": "ON",
        "CMAKE_OSX_ARCHITECTURES": "arm64",
        "OPENUSD_INSTALL_PATH": "/Users/llaforest/Workspaces/adsk/autodesk-forks/USD_1/build_work_debug/install"
      }
    },
    {
      "name": "release",
      "displayName": "Release Build",
      "generator": "Ninja",
      "binaryDir": "${sourceDir}/build/release",
      "cacheVariables": {
        "ENABLE_TESTS": "ON",
        "CMAKE_BUILD_TYPE": "Release",
        "CMAKE_INSTALL_PREFIX": "${sourceDir}/installrelease",
        "CMAKE_EXPORT_COMPILE_COMMANDS": "ON",
        "CMAKE_OSX_ARCHITECTURES": "arm64",
        "OPENUSD_INSTALL_PATH": "/Users/llaforest/Workspaces/adsk/autodesk-forks/USD_1/build_work_debug/build"
      }
    }
  ],
  "buildPresets": [
    {
      "name": "debug",
      "configurePreset": "debug"
    },
    {
      "name": "debug_adsk",
      "configurePreset": "debug_adsk"
    },
    {
      "name": "release",
      "configurePreset": "release"
    }
  ],
  "testPresets": [
    {
      "name": "debug_adsk",
      "displayName": "Run tests for Debug (ADSK)",
      "configurePreset": "debug_adsk",
      "output": {
          "outputOnFailure": true
      }
    }
  ]
}
 
