{
  "version": 6,
  "cmakeMinimumRequired": {
    "major": 3,
    "minor": 26,
    "patch": 0
  },
  "configurePresets": [
    {
      "name": "base",
      "hidden": true,
      "generator": "Ninja",
      "binaryDir": "${sourceDir}/build/${presetName}",
      "cacheVariables": {
        "ENABLE_TESTS": "ON",
        "CMAKE_INSTALL_PREFIX": "${sourceDir}/install/${presetName}",
        "CMAKE_EXPORT_COMPILE_COMMANDS": "ON"
      }
    },
    {
      "name": "debug",
      "inherits": "base",
      "displayName": "Debug",
      "description": "Use this preset for a debug build",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug"
      }
    },
    {
      "name": "release",
      "inherits": "base",
      "displayName": "Release",
      "description": "Use this preset for a release build",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Release"
      }
    },
    {
      "name": "debug-ubsan",
      "inherits": "debug",
      "displayName": "Debug + UndefinedBehaviorSanitizer",
      "description": "Debug build with UndefinedBehaviorSanitizer for undefined behavior detection",
      "condition": {
        "type": "inList",
        "string": "${hostSystemName}",
        "list": ["Linux", "Darwin"]
      },
      "cacheVariables": {
        "CMAKE_CXX_FLAGS": "-fsanitize=undefined -fno-omit-frame-pointer",
        "CMAKE_C_FLAGS": "-fsanitize=undefined -fno-omit-frame-pointer",
        "CMAKE_EXE_LINKER_FLAGS": "-fsanitize=undefined",
        "CMAKE_SHARED_LINKER_FLAGS": "-fsanitize=undefined"
      },
      "environment": {
        "UBSAN_OPTIONS": "halt_on_error=1:abort_on_error=1:print_stacktrace=1"
      }
    }
  ],
  "buildPresets": [
    {
      "name": "base",
      "hidden": true,
      "configurePreset": "base",
      "verbose": false
    },
    {
      "name": "debug",
      "inherits": "base",
      "configurePreset": "debug",
      "displayName": "Debug"
    },
    {
      "name": "release",
      "inherits": "base",
      "configurePreset": "release",
      "displayName": "Release"
    },
    {
      "name": "debug-ubsan",
      "inherits": "base",
      "configurePreset": "debug-ubsan",
      "displayName": "Debug (UBSanitizer)"
    }
  ],
  "testPresets": [
    {
      "name": "base",
      "hidden": true,
      "configurePreset": "base",
      "output": {
        "outputOnFailure": true
      }
    },
    {
      "name": "debug",
      "inherits": "base",
      "displayName": "Run tests for Debug",
      "configurePreset": "debug"
    },
    {
      "name": "release",
      "inherits": "base",
      "displayName": "Run tests for Release",
      "configurePreset": "release"
    },
    {
      "name": "debug-ubsan",
      "inherits": "base",
      "displayName": "Run tests (UBSanitizer)",
      "configurePreset": "debug-ubsan",
      "execution": {
        "timeout": 300
      }
    }
  ],
  "workflowPresets": [
    {
      "name": "debug",
      "displayName": "Debug",
      "description": "Debug build and test",
      "steps": [
        {
          "type": "configure",
          "name": "debug"
        },
        {
          "type": "build",
          "name": "debug"
        },
        {
          "type": "test",
          "name": "debug"
        }
      ]
    },
    {
      "name": "release",
      "displayName": "Release",
      "description": "Release build and test",
      "steps": [
        {
          "type": "configure",
          "name": "release"
        },
        {
          "type": "build",
          "name": "release"
        },
        {
          "type": "test",
          "name": "release"
        }
      ]
    },
    {
      "name": "debug-ubsan",
      "displayName": "UBSanitizer Analysis",
      "description": "Build and test with UndefinedBehaviorSanitizer for undefined behavior detection",
      "steps": [
        {
          "type": "configure",
          "name": "debug-ubsan"
        },
        {
          "type": "build",
          "name": "debug-ubsan"
        },
        {
          "type": "test",
          "name": "debug-ubsan"
        }
      ]
    }
  ]
}
